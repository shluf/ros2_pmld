<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="custom_turtlebot">

  <!-- Parameters -->
  <xacro:property name="wheel_separation" value="0.287" />
  <xacro:property name="wheel_radius" value="0.033" />
  <xacro:property name="wheel_width" value="0.018" />
  <xacro:property name="mass_base" value="1.0" />
  <xacro:property name="mass_wheel" value="0.1" />

  <!-- Materials -->
  <material name="grey">
    <color rgba="0.5 0.5 0.5 1.0"/>
  </material>

  <!-- Root frame -->
  <link name="base_footprint" />

  <!-- base_link connected to base_footprint -->
  <link name="base_link">
    <inertial>
      <origin xyz="-0.064 0 0.048" rpy="0 0 0"/>
      <mass value="${mass_base}"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>

    <visual name="base_visual">
      <origin xyz="-0.064 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://follower/models/custom_turtlebot/meshes/waffle_pi_base.dae" scale="1 1 1"/>
      </geometry>
    </visual>

    <collision name="base_collision">
      <origin xyz="-0.064 0 0.048" rpy="0 0 0"/>
      <geometry>
        <box size="0.265 0.265 0.089"/>
      </geometry>
    </collision>
  </link>

  <!-- fixed joint from base_footprint to base_link -->
  <joint name="base_footprint_to_base_link" type="fixed">
    <parent link="base_footprint"/>
    <child link="base_link"/>
    <origin xyz="0 0 0.010" rpy="0 0 0"/>
  </joint>

  <!-- IMU link (visual/placeholder) -->
  <link name="imu_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.01"/>
      <inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5"/>
    </inertial>
  </link>
  <joint name="base_to_imu" type="fixed">
    <parent link="base_link"/>
    <child link="imu_link"/>
    <origin xyz="0 0 0.05" rpy="0 0 0"/>
  </joint>

  <!-- Wheel left -->
  <link name="wheel_left_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="${mass_wheel}"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>

    <visual name="wheel_left_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://follower/models/custom_turtlebot/meshes/tire.dae" scale="1 1 1"/>
      </geometry>
    </visual>

    <collision name="wheel_left_collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
      </geometry>
    </collision>
  </link>

  <!-- Wheel right -->
  <link name="wheel_right_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="${mass_wheel}"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>

    <visual name="wheel_right_visual">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://follower/models/custom_turtlebot/meshes/tire.dae" scale="1 1 1"/>
      </geometry>
    </visual>

    <collision name="wheel_right_collision">
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="${wheel_radius}" length="${wheel_width}"/>
      </geometry>
    </collision>
  </link>

  <!-- wheel joints (revolute) -->
  <!-- note: SDF had rotation -1.57 around X; here we keep axis z for drive -->
  <joint name="wheel_left_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_left_link"/>
    <origin xyz="0.0 0.144 0.023" rpy="-1.5708 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1000" upper="1000" effort="10" velocity="20"/>
  </joint>

  <joint name="wheel_right_joint" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_right_link"/>
    <origin xyz="0.0 -0.144 0.023" rpy="-1.5708 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1000" upper="1000" effort="10" velocity="20"/>
  </joint>

  <!-- caster wheels -->
  <link name="caster_back_right_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.001"/>
      <inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><sphere radius="0.005"/></geometry>
      <material name="grey"/>
    </visual>
    <collision><origin xyz="0 0 0" rpy="0 0 0"/><geometry><sphere radius="0.005"/></geometry></collision>
  </link>

  <link name="caster_back_left_link">
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <mass value="0.001"/>
      <inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry><sphere radius="0.005"/></geometry>
      <material name="grey"/>
    </visual>
    <collision><origin xyz="0 0 0" rpy="0 0 0"/><geometry><sphere radius="0.005"/></geometry></collision>
  </link>

  <joint name="caster_back_right_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_back_right_link"/>
    <origin xyz="-0.177 -0.064 -0.004" rpy="0 0 0"/>
  </joint>

  <joint name="caster_back_left_joint" type="fixed">
    <parent link="base_link"/>
    <child link="caster_back_left_link"/>
    <origin xyz="-0.177 0.064 -0.004" rpy="0 0 0"/>
  </joint>

  <!-- camera links -->
  <link name="camera_link"/>
  <link name="camera_rgb_optical_frame">
    <inertial>
      <origin xyz="0.076 0.0 0.093" rpy="0 0 0"/>
      <mass value="0.035"/>
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/>
    </inertial>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="0.073 -0.011 0.084" rpy="0 0 0"/>
  </joint>

  <joint name="camera_rgb_joint" type="fixed">
    <parent link="camera_link"/>
    <child link="camera_rgb_optical_frame"/>
    <origin xyz="0.003 0.011 0.009" rpy="0 0 0"/>
  </joint>

  <!-- Transmissions for ros2_control (velocity interface) -->
  <transmission name="left_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="wheel_left_joint">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="left_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <transmission name="right_wheel_trans">
    <type>transmission_interface/SimpleTransmission</type>
    <joint name="wheel_right_joint">
      <hardwareInterface>VelocityJointInterface</hardwareInterface>
    </joint>
    <actuator name="right_motor">
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

</robot>
